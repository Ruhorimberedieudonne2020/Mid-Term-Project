<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Insert Declaration</title>
  <link rel="stylesheet" href="/css/styles.css">
  <script src="/js/main.js" defer></script>
</head>
<body>
  <div class="form-card">
    <h2 id="insertTitle"><script>
document.addEventListener("DOMContentLoaded", () => {
  const params = new URLSearchParams(window.location.search);
  const page = params.get("page") || "declarations";

  const title = document.getElementById("insertTitle");
  if (title) {
    if (page === "paid") {
      title.textContent = "Insert Paid Declaration";
    } else if (page === "unpaid") {
      title.textContent = "Insert Unpaid Declaration";
    } else {
      title.textContent = "Insert Declaration";
    }
  }
});
</script></h2>
    <form id="declarationsForm">
      <label>Date</label>
      <input type="date" id="date" name="date" required>

      <label>Company Name</label>
      <input type="text" id="company" name="company" required>

      <label>Owner</label>
      <input type="text" id="owner" name="owner" required>

      <label>Supposed Paid</label>
      <input type="number" id="supposedPaid" name="supposedPaid" step="0.01" required>

      <label>Paid Amount</label>
      <input type="number" id="paidAmount" name="paidAmount" step="0.01" required>

      <button type="submit" id="saveBtn" class="btn btn-save">save</button>
    </form>
  </div>
</body>
</html>